<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To-Do List</title>
    <link rel="stylesheet" href="public/style.css">
  </head>
  <body>
    <form class="" action="/todo" method="post">
      <input type="text" name="toDoItem" value="">
      <button type="submit" name="button">Add todo</button>
    </form>
    <section>
      <form action="/done" method="post">
        {{#todo}}
          {{^done}}
            <p>
              <span>{{task}}</span>
              <button type="submit" name="button" value="{{task}}">Mark Complete</button>
            </p>
          {{/done}}
        {{/todo}}
      </form>
    </section>
    <section>
      <h2>Completed tasks</h2>
        {{#todo}}
          {{#done}}
            <p class="complete">{{task}}</p>
          {{/done}}
        {{/todo}}
    </section>

  </body>
</html>
